@model IEnumerable<Domain.Entities.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<div class="panel panel-default">
    <div class="panel-heading">
    List of books
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.BookId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                       @item.BookId
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { item.BookId })
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td class="text-right">
                     @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                     @Html.ActionLink("Delete", "Delete", new {@bookId= @item.BookId },new { @class = "btn btn-danger" })  
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        <p>
            @Html.ActionLink("Add new", "Create",null,new { @class = "btn btn-default" })
        </p>
    </div>


</div>